<p id="notice"><%= notice %></p>

<h1>Client Form Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Icon</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_form_categories.each do |client_form_category| %>
      <tr>
        <td><%= client_form_category.name %></td>
        <td><%= client_form_category.description %></td>
        <td><%= client_form_category.icon %></td>
        <td><%= client_form_category.color %></td>
        <td><%= link_to 'Show', client_form_category %></td>
        <td><%= link_to 'Edit', edit_client_form_category_path(client_form_category) %></td>
        <td><%= link_to 'Destroy', client_form_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

